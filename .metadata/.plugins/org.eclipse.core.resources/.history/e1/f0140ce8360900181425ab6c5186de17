	def compile(Productline_decl e) {
		println(e.name);
		for(Delta_clause f: e.delta_clause){
			print(f.deltaspec.name+"--->");//+f.from_condition.application_condition.feature+f.when_condition.application_condition.feature);
			try{
				if((f.when_condition.application_condition)!==null){
				resolveApplicationCondition(f.when_condition.application_condition);
				}
			}catch(Exception err){
				println(err.toString);
			}
			println();
		}
		
	}
	
	
	def resolveApplicationCondition(Application_condition app_cond){
	try{	var List<String> featureName = new ArrayList;
		
			if(app_cond instanceof AppOr_exp){
				println("I am object of or");
				resolveApplicationCondition(app_cond.left);
				resolveApplicationCondition(app_cond.right);
			}else if(app_cond instanceof AppAnd_exp){
				println("I am object of and")
				resolveApplicationCondition(app_cond.left);
				resolveApplicationCondition(app_cond.right);
			}else{
				println("I am object of negation or feature");
				print(app_cond.feature);
				print(app_cond.app_cond);
				
			}
		}catch(Exception e){
			println(e.toString());
		}
	}
